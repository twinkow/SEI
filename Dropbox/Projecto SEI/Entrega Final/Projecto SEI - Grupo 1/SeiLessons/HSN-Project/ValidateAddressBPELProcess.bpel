<process name="ValidateAddressBPELProcess"
               targetNamespace="http://xmlns.oracle.com/SeiLessons/HSN_Project/ValidateAddressBPELProcess"
               xmlns="http://schemas.xmlsoap.org/ws/2003/03/business-process/"
               xmlns:client="http://xmlns.oracle.com/SeiLessons/HSN_Project/ValidateAddressBPELProcess"
               xmlns:ora="http://schemas.oracle.com/xpath/extension"
               xmlns:bpelx="http://schemas.oracle.com/bpel/extension"
         xmlns:bpws="http://schemas.xmlsoap.org/ws/2003/03/business-process/"
         xmlns:ns1="http://saude365.pt/"
         xmlns:bpel2="http://docs.oasis-open.org/wsbpel/2.0/process/executable">

    <!-- 
      ////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
        PARTNERLINKS                                                      
        List of services participating in this BPEL process               
      ////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
    --> 
  <partnerLinks>
    <!-- 
      The 'client' role represents the requester of this service. It is 
      used for callback. The location and correlation information associated
      with the client role are automatically set using WS-Addressing.
    -->
    <partnerLink name="validateaddressbpelprocess_client" partnerLinkType="client:ValidateAddressBPELProcess" myRole="ValidateAddressBPELProcessProvider"/>
    <partnerLink name="ValidateAddressService"
                 partnerLinkType="ns1:ValidateAddressService"
                 partnerRole="ValidateAddressCTT"/>
  </partnerLinks>

  <!-- 
    ////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
      VARIABLES                                                        
      List of messages and XML documents used within this BPEL process 
    ////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
  -->
  <variables>
    <!-- Reference to the message passed as input during initiation -->
    <variable name="inputVariable" messageType="client:ValidateAddressBPELProcessRequestMessage"/>

    <!-- Reference to the message that will be returned to the requester-->
    <variable name="outputVariable" messageType="client:ValidateAddressBPELProcessResponseMessage"/>
    <variable name="validateAddressCTTInputVariable"
              messageType="ns1:validateAddressCTTInput"/>
    <variable name="validateAddressCTTOutputVariable"
              messageType="ns1:validateAddressCTTOutput"/>
  </variables>

  <!-- 
    ////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
     ORCHESTRATION LOGIC                                               
     Set of activities coordinating the flow of messages across the    
     services integrated within this business process                  
    ////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
  -->
  <sequence name="main">

    <!-- Receive input from requestor. (Note: This maps to operation defined in ValidateAddressBPELProcess.wsdl) -->
    <receive name="receiveInput" partnerLink="validateaddressbpelprocess_client" portType="client:ValidateAddressBPELProcess" operation="process" variable="inputVariable" createInstance="yes"/>
    <assign name="TransformValidateAddressToCTTFormat">
      <bpelx:annotation>
        <bpelx:pattern>transformation</bpelx:pattern>
      </bpelx:annotation>
      <copy>
        <from expression="ora:doXSLTransformForDoc('xsl/TransformationValidateAddressToCTTFormat.xsl', $inputVariable.payload)"/>
        <to variable="validateAddressCTTInputVariable" part="parameters"/>
      </copy>
    </assign>
    <invoke name="InvokeValidateAddressService"
            inputVariable="validateAddressCTTInputVariable"
            outputVariable="validateAddressCTTOutputVariable"
            partnerLink="ValidateAddressService"
            portType="ns1:ValidateAddressCTT" operation="validateAddressCTT"
            bpelx:invokeAsDetail="no"/>
    <assign name="AssignReplyValue">
      <copy>
        <from variable="validateAddressCTTOutputVariable" part="parameters"
              query="/ns1:validateAddressCTTResponse/return"/>
        <to variable="outputVariable" part="payload"
            query="/ns1:validateAddressCTTResponse/return"/>
      </copy>
    </assign>
    <!-- Generate reply to synchronous request -->
    <reply name="replyOutput" partnerLink="validateaddressbpelprocess_client" portType="client:ValidateAddressBPELProcess" operation="process" variable="outputVariable"/>
  </sequence>
</process>